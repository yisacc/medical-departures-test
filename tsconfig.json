{
	"compilerOptions": {
		"outDir": "dist",
		"removeComments": false,
		"preserveConstEnums": true,
		"sourceMap": true,
		"declaration": true,
		"esModuleInterop": true,
		"noImplicitAny": true,
		"noImplicitReturns": true,
		"suppressImplicitAnyIndexErrors": true,
		"strictNullChecks": true,
		"noUnusedLocals": true,
		"noImplicitThis": true,
		"noUnusedParameters": true,
		"importHelpers": true,
		"noEmitHelpers": true,
		"newLine": "lf",
		"resolveJsonModule": true,
		"module": "CommonJS",
		"moduleResolution": "node",
		"pretty": true,
		"target": "ESNext",
		"allowJs": true
	},
	"formatCodeOptions": {
		"indentSize": 2,
		"tabSize": 2
	},
	"include": [
		"**/*.ts",
		"config/**/*.ts"
	],
	"exclude": [
		"node_modules",
		"dist/"
	]
}