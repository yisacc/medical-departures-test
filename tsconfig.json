{
  "compilerOptions": {
    "experimentalDecorators": true,
    "target": "es2016",
    "module": "commonjs",                              
    "outDir": "./build/",        
    "esModuleInterop": true,
    "strict": true,                          
    "noUnusedLocals": true,                           
    "noUnusedParameters": true,                       
    "noImplicitReturns": false,                        
    "noFallthroughCasesInSwitch": true,
    "resolveJsonModule": true,              
  }
}
